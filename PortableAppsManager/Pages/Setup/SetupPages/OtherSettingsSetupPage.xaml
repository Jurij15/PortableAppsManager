<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="PortableAppsManager.Pages.Setup.SetupPages.OtherSettingsSetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PortableAppsManager.Pages.Setup.SetupPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                FontFamily="Segoe UI Variable Display"
                Style="{ThemeResource BodyStrongTextBlockStyle}"
                Text="Configure other settings" />
            <settings:SettingsCard
                x:Name="FinishSetupCard"
                Grid.Row="4"
                VerticalAlignment="Bottom"
                Click="FinishSetupCard_Click"
                FontFamily="Segoe UI Variable Display"
                Header="Finish Setup"
                IsClickEnabled="True" />
        </Grid>
    </ScrollViewer>
</Page>
